@model Customer
@Html.DevExpress().TextBoxFor(model => model.CompanyName, textBoxSettings => {
    textBoxSettings.Properties.Caption = "Company Name";
    PrepareTextBoxSettings(textBoxSettings);
}).GetHtml()

@Html.DevExpress().TextBoxFor(model => model.ContactName, textBoxSettings => {
    textBoxSettings.Properties.Caption = "Contact Name";
    PrepareTextBoxSettings(textBoxSettings);
}).GetHtml()

@Html.DevExpress().TextBoxFor(model => model.ContactTitle, textBoxSettings => {
    textBoxSettings.Properties.Caption = "Contact Title";
    PrepareTextBoxSettings(textBoxSettings);
}).GetHtml()

@Html.DevExpress().TextBoxFor(model => model.Country, textBoxSettings => {
    textBoxSettings.Properties.Caption = "Country";
    PrepareTextBoxSettings(textBoxSettings);
}).GetHtml()

@Html.DevExpress().TextBoxFor(model => model.City, textBoxSettings => {
    textBoxSettings.Properties.Caption = "City";
